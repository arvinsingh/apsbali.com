{
  "name": "blog",
  "version": "3.1.0",
  "scripts": {
    "dev": "next dev",
    "predev": "pnpm run generate:content-manifests",
    "build": "pnpm run sync:content && NODE_ENV=production pnpm run generate:content-manifests && next build --webpack",
    "analyze": "ANALYZE=true pnpm run build",
    "start": "next start",
    "lint": "next lint && prettier --check '**/*.{js,ts,tsx,jsx,md,mdx}' --loglevel warn",
    "format": "prettier --write '**/*.{js,ts,tsx,jsx,md,mdx}'",
    "generate:content-manifests": "node scripts/generate-content-manifests.mjs",
    "sync:content": "sh -c 'if [ -n \"$GIT_SUBMODULE_TOKEN\" ]; then git config --global url.\"https://$GIT_SUBMODULE_TOKEN@github.com/\".insteadOf https://github.com/; fi && git submodule update --init --recursive'"
  },
  "pre-commit": "lint",
  "license": "MIT",
  "dependencies": {
    "@fec/remark-a11y-emoji": "4.0.2",
    "@mdx-js/loader": "3.1.0",
    "@mdx-js/react": "3.1.0",
    "@next/bundle-analyzer": "16.1.3",
    "@next/eslint-plugin-next": "16.1.3",
    "@next/mdx": "16.1.3",
    "@octokit/rest": "20.0.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@supabase/supabase-js": "2.39.7",
    "@vercel/analytics": "1.4.1",
    "@vercel/toolbar": "0.1.30",
    "bright": "1.0.0",
    "diff": "5.2.0",
    "geist": "^1.3.1",
    "globby": "14.0.2",
    "htmlparser2": "9.1.0",
    "lodash.debounce": "4.0.8",
    "mermaid": "^11.9.0",
    "next": "16.1.3",
    "next-mdx-remote": "5.0.0",
    "next-remote-watch": "2.0.0",
    "next-themes": "0.4.4",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "react": "19.2.3",
    "react-diff-viewer": "3.1.1",
    "react-dom": "19.2.3",
    "react-pdf": "^9.2.1",
    "react-tweet": "3.2.1",
    "rehype-highlight": "7.0.1",
    "rehype-img-size": "1.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-github-blockquote-alert": "^2.0.0",
    "remark-toc": "9.0.0",
    "tiny-glob": "0.2.9",
    "youtubei": "0.0.1-rc.36"
  },
  "devDependencies": {
    "@types/diff": "5.0.3",
    "@types/mdx": "2.0.13",
    "@types/node": "22.10.2",
    "@types/prettier": "3.0.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "clsx": "2.1.1",
    "critters": "0.0.20",
    "dotenv": "16.3.1",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.3",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-mdx": "2.2.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "gray-matter": "4.0.3",
    "marked": "12.0.0",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-hover-media-feature": "1.0.2",
    "postcss-nested": "6.0.1",
    "postcss-preset-env": "9.1.4",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "typescript-plugin-css-modules": "5.0.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "next-unused": {
    "alias": {
      "@components": "components/",
      "@data": "data/",
      "@lib": "lib/",
      "@styles": "styles/"
    },
    "include": [
      "components",
      "lib"
    ]
  }
}
